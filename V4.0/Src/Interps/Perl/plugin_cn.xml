<?xml version="1.0" encoding="UTF-8"?>
<?blueui version="2.0"?>
<plugin
   id="org.interp.perl"
   owmid="0"
   name="perl"
   version="2.0.0.5"
   provider-name="Blueant Studio"
   type="interp"
   class="IInterp"
   class-version="1.0.0"
   image="images/logo.gif">

   <description>
      Perl Interp.
   </description>

   <copyright>
      Copyright Blueant, 2000-2009.  All rights reserved.
   </copyright>

   <license>
      BLUEANT LICENSE
   </license>

   <url>
      <about label="about page" url="html/about.htm"/>
      <update label="PerlInterp update site" url="http://www.blueantstudio.net/vci/interp/perlinterp"/>
   </url>

   <property>
      <interp-type option="true" dynload="true"/>
   </property>

   <runtime>
      <library name="Bin/PerlInterp.dll">
         <export name="*"/>
      </library>
	  <library-debug name="Bin/PerlInterp_d.dll">
         <export name="*"/>
      </library-debug>
	  <interface-define></interface-define>
	  <!-- initial paramater -->
	  <init></init>
	  <!-- done paramater -->
	  <done></done>
   </runtime>
   <requires>
      <import plugin="org.blueui.core.runtime"/>
   </requires>

   <!-- document extension point -->
   <doc-extend>
      <doc name="Perl Files" id="interp.doc.perl">
	     <exts>
		    <ext>pl</ext>
			<ext>pm</ext>
		 </exts>
	  </doc>
   </doc-extend>
   
   <perspectives>
   </perspectives>


   <extension-point id="server" name="%server" schema="schema/server.exsd"/>

</plugin>
